{
  "include": ["lib/*.ts", "plopfile.ts"],
  "exclude": ["node_modules", "**/**/**.test.ts", "templates"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2020", "esnext.asynciterable"],
    "baseUrl": ".",
    "outDir": "dist/",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  }
}
